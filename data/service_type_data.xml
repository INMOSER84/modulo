<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tipos de servicio bÃ¡sicos -->
        <record id="service_type_maintenance" model="service.type">
            <field name="name">Maintenance</field>
            <field name="description">Regular maintenance service</field>
            <field name="duration">2.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_repair" model="service.type">
            <field name="name">Repair</field>
            <field name="description">Repair service for equipment</field>
            <field name="duration">4.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_installation" model="service.type">
            <field name="name">Installation</field>
            <field name="description">Installation of new equipment</field>
            <field name="duration">6.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_inspection" model="service.type">
            <field name="name">Inspection</field>
            <field name="description">Inspection service</field>
            <field name="duration">1.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_consulting" model="service.type">
            <field name="name">Consulting</field>
            <field name="description">Consulting service</field>
            <field name="duration">2.0</field>
            <field name="equipment_required" eval="False"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Tipos de servicio adicionales -->
        <record id="service_type_emergency" model="service.type">
            <field name="name">Emergency</field>
            <field name="description">Emergency service</field>
            <field name="duration">3.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_preventive" model="service.type">
            <field name="name">Preventive Maintenance</field>
            <field name="description">Preventive maintenance service</field>
            <field name="duration">2.5</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_corrective" model="service.type">
            <field name="name">Corrective Maintenance</field>
            <field name="description">Corrective maintenance service</field>
            <field name="duration">4.5</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_training" model="service.type">
            <field name="name">Training</field>
            <field name="description">Training service for equipment usage</field>
            <field name="duration">3.0</field>
            <field name="equipment_required" eval="False"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record id="service_type_upgrade" model="service.type">
            <field name="name">Upgrade</field>
            <field name="description">Equipment upgrade service</field>
            <field name="duration">5.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Tipos de servicio desactivados por defecto -->
        <record id="service_type_decommission" model="service.type">
            <field name="name">Decommission</field>
            <field name="description">Equipment decommissioning service</field>
            <field name="duration">2.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="False"/>
        </record>

        <record id="service_type_relocation" model="service.type">
            <field name="name">Relocation</field>
            <field name="description">Equipment relocation service</field>
            <field name="duration">3.0</field>
            <field name="equipment_required" eval="True"/>
            <field name="technician_required" eval="True"/>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
