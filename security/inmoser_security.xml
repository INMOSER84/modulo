<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Grupos de seguridad -->
        <record id="group_service_user" model="res.groups">
            <field name="name">Service User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_service_management"/>
        </record>

        <record id="group_service_manager" model="res.groups">
            <field name="name">Service Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_service_user'))]"/>
            <field name="category_id" ref="base.module_category_service_management"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_service_technician" model="res.groups">
            <field name="name">Service Technician</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="base.module_category_service_management"/>
        </record>

        <!-- Reglas de registro -->
        <!-- Reglas para Service Order -->
        <record id="service_order_rule_user" model="ir.rule">
            <field name="name">Service Order User</field>
            <field name="model_id" ref="model_service_order"/>
            <field name="domain_force">['|', ('technician_id.user_id', '=', user.id), ('partner_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_service_user'))]"/>
        </record>

        <record id="service_order_rule_manager" model="ir.rule">
            <field name="name">Service Order Manager</field>
            <field name="model_id" ref="model_service_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_service_manager'))]"/>
        </record>

        <!-- Regla específica para técnicos en órdenes de servicio -->
        <record id="service_order_rule_technician" model="ir.rule">
            <field name="name">Service Order Technician</field>
            <field name="model_id" ref="model_service_order"/>
            <field name="domain_force">[('technician_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_service_technician'))]"/>
        </record>

        <!-- Reglas para Service Equipment -->
        <record id="service_equipment_rule_user" model="ir.rule">
            <field name="name">Service Equipment User</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="domain_force">[('partner_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_service_user'))]"/>
        </record>

        <record id="service_equipment_rule_manager" model="ir.rule">
            <field name="name">Service Equipment Manager</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_service_manager'))]"/>
        </record>

        <!-- Regla para técnicos en equipos de servicio -->
        <record id="service_equipment_rule_technician" model="ir.rule">
            <field name="name">Service Equipment Technician</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="domain_force">[('service_order_ids.technician_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_service_technician'))]"/>
        </record>

        <!-- Reglas para Service Type -->
        <record id="service_type_rule_manager" model="ir.rule">
            <field name="name">Service Type Manager</field>
            <field name="model_id" ref="model_service_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_service_manager'))]"/>
        </record>

        <!-- Regla para usuarios y técnicos en tipos de servicio (solo lectura) -->
        <record id="service_type_rule_user" model="ir.rule">
            <field name="name">Service Type User</field>
            <field name="model_id" ref="model_service_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_service_user')), (4, ref('group_service_technician'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
