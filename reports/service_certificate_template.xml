<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Plantilla de certificado de servicio -->
        <template id="report_service_certificate_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Encabezado -->
                        <div class="text-center mb-4">
                            <h1>Service Certificate</h1>
                            <div class="d-inline-block border rounded p-2 bg-success text-white">
                                <strong>Certificate #:</strong> <span t-field="doc.name"/>
                            </div>
                        </div>

                        <!-- Información Principal -->
                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">Service Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Customer:</strong></div>
                                            <div class="col-7"><span t-field="doc.partner_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Service Type:</strong></div>
                                            <div class="col-7"><span t-field="doc.service_type_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Service Date:</strong></div>
                                            <div class="col-7"><span t-field="doc.date_completed"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Technician:</strong></div>
                                            <div class="col-7"><span t-field="doc.technician_id.name"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">Equipment Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Equipment:</strong></div>
                                            <div class="col-7"><span t-field="doc.equipment_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Serial Number:</strong></div>
                                            <div class="col-7"><span t-field="doc.equipment_id.serial_number"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Model:</strong></div>
                                            <div class="col-7"><span t-field="doc.equipment_id.model"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Warranty:</strong></div>
                                            <div class="col-7">
                                                <t t-if="doc.equipment_id.warranty_end and doc.equipment_id.warranty_end &gt;= datetime.datetime.now().strftime('%Y-%m-%d')">
                                                    <span class="badge bg-success">Active</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="badge bg-danger">Expired</span>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detalles del Servicio -->
                        <div class="card mt-4 mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="card-title mb-0">Service Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Service Description:</h6>
                                        <p t-field="doc.description"/>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Work Performed:</h6>
                                        <p t-field="doc.work_performed"/>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Materials Used:</h6>
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Material</th>
                                                    <th>Quantity</th>
                                                    <th>Unit</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="doc.material_line_ids" t-as="line">
                                                    <td><span t-field="line.product_id.name"/></td>
                                                    <td><span t-field="line.quantity"/></td>
                                                    <td><span t-field="line.uom_id.name"/></td>
                                                </tr>
                                                <t t-if="not doc.material_line_ids">
                                                    <tr>
                                                        <td colspan="3" class="text-center">No materials used</td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Resultados y Recomendaciones -->
                        <div class="card mt-4 mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="card-title mb-0">Results &amp; Recommendations</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Test Results:</h6>
                                        <p t-field="doc.test_results"/>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Recommendations:</h6>
                                        <p t-field="doc.recommendations"/>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <h6>Next Service Date:</h6>
                                        <p><span t-field="doc.next_service_date"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Certificación -->
                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-dark text-white">
                                        <h5 class="card-title mb-0">Certification Details</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Certificate Date:</strong></div>
                                            <div class="col-7"><span t-field="doc.certificate_date"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Valid Until:</strong></div>
                                            <div class="col-7"><span t-field="doc.valid_until"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Standards:</strong></div>
                                            <div class="col-7"><span t-field="doc.standards"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Compliance:</strong></div>
                                            <div class="col-7">
                                                <t t-if="doc.is_compliant">
                                                    <span class="badge bg-success">Compliant</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="badge bg-danger">Non-Compliant</span>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">QR Code</h5>
                                    </div>
                                    <div class="card-body">
                                        <img t-att-src="'data:image/png;base64,'+ doc.qr_code" style="max-width: 120px;"/>
                                        <p class="mt-2 small">Scan for verification</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Firmas -->
                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">Technician Signature</h5>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="border-bottom mb-2" style="height: 60px;">
                                            <img t-if="doc.technician_signature" t-att-src="'data:image/png;base64,'+ doc.technician_signature" style="max-height: 50px;"/>
                                        </div>
                                        <p><span t-field="doc.technician_id.name"/></p>
                                        <p class="small"><span t-field="doc.technician_id.certification"/></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="card-title mb-0">Customer Signature</h5>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="border-bottom mb-2" style="height: 60px;">
                                            <img t-if="doc.customer_signature" t-att-src="'data:image/png;base64,'+ doc.customer_signature" style="max-height: 50px;"/>
                                        </div>
                                        <p><span t-field="doc.partner_id.name"/></p>
                                        <p class="small">Customer</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pie de página -->
                        <div class="row mt-4">
                            <div class="col-8">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Company Information</h6>
                                        <p><strong>Company:</strong> <span t-field="doc.company_id.name"/></p>
                                        <p><strong>Address:</strong> <span t-field="doc.company_id.street"/></p>
                                        <p><strong>Phone:</strong> <span t-field="doc.company_id.phone"/></p>
                                        <p><strong>Email:</strong> <span t-field="doc.company_id.email"/></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Generated</h6>
                                        <p><t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/></p>
                                        <p><t t-esc="datetime.datetime.now().strftime('%H:%M:%S')"/></p>
                                        <p>By <span t-field="doc.create_uid.name"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Acción de reporte -->
        <record id="action_report_service_certificate" model="ir.actions.report">
            <field name="name">Service Certificate</field>
            <field name="model">service.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">modulo.report_service_certificate_document</field>
            <field name="report_file">modulo.report_service_certificate_document</field>
            <field name="binding_model_id" ref="model_service_order"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Service Certificate - %s' % (object.name)</field>
        </record>
    </data>
</odoo>
