<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Plantilla de reporte de orden de servicio -->
        <template id="report_service_order_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Encabezado -->
                        <div class="text-center mb-4">
                            <h1>Service Order</h1>
                            <div class="d-inline-block border rounded p-2 bg-primary text-white">
                                <strong>Order #:</strong> <span t-field="doc.name"/>
                            </div>
                        </div>

                        <!-- Información Principal -->
                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">Order Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Customer:</strong></div>
                                            <div class="col-7"><span t-field="doc.partner_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Service Type:</strong></div>
                                            <div class="col-7"><span t-field="doc.service_type_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Requested Date:</strong></div>
                                            <div class="col-7"><span t-field="doc.date_requested"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Scheduled Date:</strong></div>
                                            <div class="col-7"><span t-field="doc.date_scheduled"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Priority:</strong></div>
                                            <div class="col-7">
                                                <span t-if="doc.priority == 'urgent'" class="badge bg-danger">
                                                    <span t-field="doc.priority"/>
                                                </span>
                                                <span t-elif="doc.priority == 'high'" class="badge bg-warning">
                                                    <span t-field="doc.priority"/>
                                                </span>
                                                <span t-elif="doc.priority == 'medium'" class="badge bg-info">
                                                    <span t-field="doc.priority"/>
                                                </span>
                                                <span t-else="" class="badge bg-secondary">
                                                    <span t-field="doc.priority"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">Equipment &amp; Technician</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Equipment:</strong></div>
                                            <div class="col-7"><span t-field="doc.equipment_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Serial Number:</strong></div>
                                            <div class="col-7"><span t-field="doc.equipment_id.serial_number"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Technician:</strong></div>
                                            <div class="col-7"><span t-field="doc.technician_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Status:</strong></div>
                                            <div class="col-7">
                                                <span t-if="doc.state == 'completed'" class="badge bg-success">
                                                    <span t-field="doc.state"/>
                                                </span>
                                                <span t-elif="doc.state in ('scheduled', 'in_progress')" class="badge bg-warning">
                                                    <span t-field="doc.state"/>
                                                </span>
                                                <span t-elif="doc.state == 'draft'" class="badge bg-info">
                                                    <span t-field="doc.state"/>
                                                </span>
                                                <span t-else="" class="badge bg-danger">
                                                    <span t-field="doc.state"/>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Duration:</strong></div>
                                            <div class="col-7"><span t-field="doc.duration"/> hours</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Fechas del Servicio -->
                        <div class="row mt-4 mb-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="card-title mb-0">Service Timeline</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-3 text-center">
                                                <div class="border rounded p-2">
                                                    <strong>Requested</strong><br/>
                                                    <span t-field="doc.date_requested"/>
                                                </div>
                                            </div>
                                            <div class="col-3 text-center">
                                                <div class="border rounded p-2">
                                                    <strong>Scheduled</strong><br/>
                                                    <span t-field="doc.date_scheduled"/>
                                                </div>
                                            </div>
                                            <div class="col-3 text-center">
                                                <div class="border rounded p-2">
                                                    <strong>Started</strong><br/>
                                                    <span t-field="doc.date_started"/>
                                                </div>
                                            </div>
                                            <div class="col-3 text-center">
                                                <div class="border rounded p-2">
                                                    <strong>Completed</strong><br/>
                                                    <span t-field="doc.date_completed"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Descripción del Servicio -->
                        <div class="card mt-4 mb-4">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="card-title mb-0">Service Description</h5>
                            </div>
                            <div class="card-body">
                                <p t-field="doc.description"/>
                            </div>
                        </div>

                        <!-- Líneas de Refacción -->
                        <div class="card mt-4 mb-4">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="card-title mb-0">Service Lines</h5>
                            </div>
                            <div class="card-body">
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Subtotal</th>
                                            <th>Notes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="doc.refaction_line_ids" t-as="line">
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td><span t-field="line.quantity"/></td>
                                            <td><span t-field="line.unit_price"/></td>
                                            <td><span t-field="line.subtotal"/></td>
                                            <td><span t-field="line.notes"/></td>
                                        </tr>
                                        <t t-if="not doc.refaction_line_ids">
                                            <tr>
                                                <td colspan="5" class="text-center">No service lines</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                            <td><strong t-esc="sum(doc.refaction_line_ids.mapped('subtotal'))"/></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <!-- Notas Adicionales -->
                        <div class="card mt-4 mb-4">
                            <div class="card-header bg-dark text-white">
                                <h5 class="card-title mb-0">Additional Notes</h5>
                            </div>
                            <div class="card-body">
                                <p t-field="doc.notes"/>
                            </div>
                        </div>

                        <!-- Información de Facturación -->
                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="card-title mb-0">Billing Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Invoiced:</strong></div>
                                            <div class="col-7">
                                                <t t-if="doc.is_invoiced">
                                                    <span class="badge bg-success">Yes</span>
                                                </t>
                                                <t t-else="">
                                                    <span class="badge bg-danger">No</span>
                                                </t>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Invoice #:</strong></div>
                                            <div class="col-7"><span t-field="doc.invoice_id.name"/></div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-5"><strong>Invoice Amount:</strong></div>
                                            <div class="col-7"><span t-field="doc.invoice_id.amount_total"/></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">QR Code</h5>
                                    </div>
                                    <div class="card-body">
                                        <img t-att-src="'data:image/png;base64,'+ doc.qr_code" style="max-width: 120px;"/>
                                        <p class="mt-2 small">Scan for details</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pie de página -->
                        <div class="row mt-4">
                            <div class="col-8">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Company Information</h6>
                                        <p><strong>Company:</strong> <span t-field="doc.company_id.name"/></p>
                                        <p><strong>Address:</strong> <span t-field="doc.company_id.street"/></p>
                                        <p><strong>Phone:</strong> <span t-field="doc.company_id.phone"/></p>
                                        <p><strong>Email:</strong> <span t-field="doc.company_id.email"/></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Generated</h6>
                                        <p><t t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/></p>
                                        <p><t t-esc="datetime.datetime.now().strftime('%H:%M:%S')"/></p>
                                        <p>By <span t-field="doc.create_uid.name"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Acción de reporte -->
        <record id="action_report_service_order" model="ir.actions.report">
            <field name="name">Service Order</field>
            <field name="model">service.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">modulo.report_service_order_document</field>
            <field name="report_file">modulo.report_service_order_document</field>
            <field name="binding_model_id" ref="model_service_order"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Service Order - %s' % (object.name)</field>
        </record>
    </data>
</odoo>
