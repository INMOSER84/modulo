<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle"/>
                        </button>
                        <button name="action_view_service_orders" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="service_order_count" widget="statinfo" string="Service Orders"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Type..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="equipment_required"/>
                            <field name="technician_required"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol -->
    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Types" decoration-info="not active">
                <field name="name"/>
                <field name="duration"/>
                <field name="equipment_required"/>
                <field name="technician_required"/>
                <field name="service_order_count" optional="show"/>
                <field name="active" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_service_type_search" model="ir.ui.view">
        <field name="name">service.type.search</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <search string="Service Types">
                <field name="name"/>
                <separator/>
                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter name="equipment_required" string="Equipment Required" domain="[('equipment_required','=',True)]"/>
                <filter name="technician_required" string="Technician Required" domain="[('technician_required','=',True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_equipment_required" string="Equipment Required" context="{'group_by':'equipment_required'}"/>
                    <filter name="group_technician_required" string="Technician Required" context="{'group_by':'technician_required'}"/>
                    <filter name="group_active" string="Active" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista de gráfico -->
    <record id="view_service_type_graph" model="ir.ui.view">
        <field name="name">service.type.graph</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <graph string="Service Types Analysis">
                <field name="name" type="row"/>
                <field name="service_order_count" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista de pivote -->
    <record id="view_service_type_pivot" model="ir.ui.view">
        <field name="name">service.type.pivot</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <pivot string="Service Types Analysis">
                <field name="name" type="row"/>
                <field name="equipment_required" type="col"/>
                <field name="service_order_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">service.type</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No service types found
            </p>
            <p>
                Create your first service type to categorize your services.
            </p>
        </field>
    </record>
</odoo>
