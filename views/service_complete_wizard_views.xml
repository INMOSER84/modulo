<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario del asistente -->
        <record id="view_service_complete_wizard_form" model="ir.ui.view">
            <field name="name">service.complete.wizard.form</field>
            <field name="model">service.complete.wizard</field>
            <field name="arch" type="xml">
                <form string="Complete Service Order">
                    <sheet>
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="completion_date"/>
                            <field name="notes"/>
                        </group>
                        <notebook>
                            <page string="Refaction Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="subtotal"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_complete" type="object" string="Complete" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- AcciÃ³n del asistente -->
        <record id="action_service_complete_wizard" model="ir.actions.act_window">
            <field name="name">Complete Service Order</field>
            <field name="res_model">service.complete.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_order_id': active_id}</field>
        </record>
    </data>
</odoo>
