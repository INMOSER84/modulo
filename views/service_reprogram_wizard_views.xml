<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario del asistente -->
        <record id="view_service_reprogram_wizard_form" model="ir.ui.view">
            <field name="name">service.reprogram.wizard.form</field>
            <field name="model">service.reprogram.wizard</field>
            <field name="arch" type="xml">
                <form string="Reprogram Service Order">
                    <sheet>
                        <group>
                            <field name="order_id" invisible="1"/>
                            <field name="new_date"/>
                            <field name="reason"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_reprogram" type="object" string="Reprogram" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- AcciÃ³n del asistente -->
        <record id="action_service_reprogram_wizard" model="ir.actions.act_window">
            <field name="name">Reprogram Service Order</field>
            <field name="res_model">service.reprogram.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_order_id': active_id}</field>
        </record>
    </data>
</odoo>
