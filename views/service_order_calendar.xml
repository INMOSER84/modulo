<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de calendario para Ã³rdenes de servicio -->
        <record id="view_service_order_calendar" model="ir.ui.view">
            <field name="name">service.order.calendar</field>
            <field name="model">service.order</field>
            <field name="arch" type="xml">
                <calendar string="Service Orders" date_start="date_scheduled" date_stop="date_completed" 
                         color="technician_id" mode="month" quick_add="False">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="service_type_id"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="technician_id"/>
                    <field name="equipment_id"/>
                </calendar>
            </field>
        </record>
    </data>
</odoo>
