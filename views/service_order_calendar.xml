<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de calendario para Ã³rdenes de servicio -->
    <record id="view_service_order_calendar" model="ir.ui.view">
        <field name="name">service.order.calendar</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <calendar string="Service Orders"
                     date_start="date_scheduled"
                     date_stop="date_completed"
                     color="technician_id"
                     mode="month"
                     quick_add="False"
                     event_open_popup="true"
                     form_view_id="%(view_service_order_form)s">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_type_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="technician_id"/>
                <field name="equipment_id"/>
                <templates>
                    <t t-name="calendar-box" owl="1">
                        <div class="o_calendar_box">
                            <div class="o_calendar_color_strip" t-att-style="'background-color: ' + record.color"/>
                            <div class="o_calendar_title">
                                <t t-esc="record.name"/>
                            </div>
                            <div class="o_calendar_subtitle">
                                <t t-esc="record.partner_id"/>
                            </div>
                            <div class="o_calendar_info">
                                <span t-if="record.service_type_id">
                                    <t t-esc="record.service_type_id"/>
                                </span>
                                <span t-if="record.technician_id">
                                    <t t-esc="record.technician_id"/>
                                </span>
                            </div>
                        </div>
                    </t>
                    <t t-name="calendar-popover" owl="1">
                        <div class="o_calendar_popover">
                            <div class="o_calendar_title">
                                <strong><t t-esc="record.name"/></strong>
                            </div>
                            <div class="o_calendar_content">
                                <div><t t-esc="record.partner_id"/></div>
                                <div>Type: <t t-esc="record.service_type_id"/></div>
                                <div>Technician: <t t-esc="record.technician_id"/></div>
                                <div>Equipment: <t t-esc="record.equipment_id"/></div>
                                <div>Status: <t t-esc="record.state"/></div>
                                <div>Priority: <t t-esc="record.priority"/></div>
                                <div>Scheduled: <t t-esc="record.date_scheduled"/></div>
                                <div>Completed: <t t-esc="record.date_completed"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </calendar>
        </field>
    </record>
</odoo>
